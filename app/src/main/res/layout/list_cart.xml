<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/margin_1"
    android:orientation="horizontal"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_margin="@dimen/margin_1"
        android:id="@+id/pizzaImage"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/margin_16"
        android:layout_height="@dimen/margin_16"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/addon"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_alignParentStart="true"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/price"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_alignParentEnd="true"
                android:background="@drawable/shape_gray_stoke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_margin="@dimen/margin_04"
                    android:id="@+id/Quality_decreasee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_mark"
                    android:padding="1dp"
                    android:src="@drawable/ic_remove" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/quantity_count"
                    android:layout_width="41dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:text="0" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_margin="@dimen/margin_04"
                    android:id="@+id/Quantity_incressed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_mark"
                    android:src="@drawable/ic_add" />


            </LinearLayout>


        </RelativeLayout>




    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>